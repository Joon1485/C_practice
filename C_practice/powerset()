#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#define MAX 100
char value[MAX];
static int count = 0;

void show1(char arr[], int mask[], int n);
int isset(int arr[], int n)
{
    int i;
    for (i = 0; i < n; i++)
    {
        if (arr[i] == 1)
            return 1;
    }
    return 0;
}
void powerset(int arr[], int i, int n)
{
    if (i == n)
    {
        if (isset(arr, n))
            count++;
        show1(value, arr, n);
    }
    else
    {
        arr[i] = 1;
        powerset(arr, i + 1, n);
        arr[i] = 0;
        powerset(arr, i + 1, n);
    }
}
